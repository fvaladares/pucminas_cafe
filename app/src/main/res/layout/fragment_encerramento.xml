<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.encerramento.EncerramentoFragment">

    <ImageView
        android:id="@+id/ivOK"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:importantForAccessibility="no"
        android:src="@drawable/outline_checklist_rtl_24"
        app:layout_constraintBottom_toTopOf="@id/textViewValeu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewValeu"
        android:layout_width="0dp"
        android:layout_height="@dimen/altura_padrao"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/textViewLogoLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivOK"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Valeu Fabrício!!" />


    <TextView
        android:id="@+id/textViewLogoLogo"
        android:layout_width="0dp"
        android:layout_height="@dimen/altura_padrao"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValeu"
        tools:text="Logo logo seu produto será entregue." />

    <Button
        android:id="@+id/btnConcluir"
        android:layout_width="0dp"
        android:layout_height="@dimen/altura_padrao"
        android:text="@string/lbl_concluir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>